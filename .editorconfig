root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{tsx}]
indent_size = 2

[*.{css,less,scss}]
indent_size = 2

[*.{html,jade,pug}]
indent_size = 2

[*.{scala,sbt}]
indent_size = 2

[*.{xml,conf,json,yml,yaml}]
indent_size = 2
